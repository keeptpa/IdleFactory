<input type="number" step="Step" @bind="NowValue"/>
@code {
    [Parameter] public Action<int> Set { get; set; }

    [Parameter]
    public int NowValue
    {
        get => _value;
        set
        {
            _value = Math.Max(Math.Min(value, Max), Min);
            Set?.Invoke(_value);
        }
    }

    private int _value;
    [Parameter] public int Min { get; set; }
    [Parameter] public int Max { get; set; }
    [Parameter] public float Step { get; set; }
}